<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ============================= Thoughts related to royal titles ============================= -->

  <ThoughtDef>
    <defName>GainedTitleValtec</defName>
    <durationDays>7</durationDays>
    <thoughtClass>Thought_MemoryRoyalTitle</thoughtClass>
    <nullifyingTraits><li>Ascetic</li></nullifyingTraits>
    <stages>
      <li>
        <label>Получен {TITLE} титул</label>
        <description>Мне присвоено звание {TITLE}. Мне нравится признание!</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>LostTitleValtec</defName>
    <durationDays>7</durationDays>
    <thoughtClass>Thought_MemoryRoyalTitle</thoughtClass>
    <nullifyingTraits><li>Ascetic</li></nullifyingTraits>
    <stages>
      <li>
        <label>Потеряно {TITLE} звание</label>
        <description>Я потерял {TITLE} звание.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>TitleApparelRequirementNotMet</defName>
    <workerClass>ThoughtWorker_RoyalTitleApparelRequirementNotMet</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <nullifyingTraits><li>Ascetic</li></nullifyingTraits>
    <developmentalStageFilter>Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>Хочу {TITLE_label}-одежду</label>
        <description>{TITLE_indefinite} как я, должен быть одет в одежду, соответствующую моему статусу:\n\n{0}</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>TitleApparelMinQualityNotMet</defName>
    <workerClass>ThoughtWorker_RoyalTitleApparelMinQualityNotMet</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <nullifyingTraits><li>Ascetic</li></nullifyingTraits>
    <stages>
      <li>
        <label>Хочу {TITLE_label}-качественную одежду</label>
        <description>{TITLE_indefinite} мне, как и мне, следует носить одежду только {QUALITY} качества и выше.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
