<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <RecipeDef ParentName="RangedWeaponRecipeBase">
        <defName>MakeMolotov</defName>
        <label>make Molotov Cocktails</label>
        <description>Make a thrown weapon that burns your enemies into ashes!</description>
        <jobString>Making Molotov Cocktails.</jobString>
        <workAmount>3500</workAmount>
        <soundWorking>Recipe_Tailor</soundWorking>
        <skillRequirements>
            <Crafting>5</Crafting>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>EmptyBottle</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Chemfuel</li>
                    </thingDefs>
                </filter>
                <count>30</count>
            </li>
            <li>
                <filter>
                    <categories>
                        <li>BTextiles</li>
                    </categories>
                </filter>
                <count>30</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>BTextiles</li>
            </categories>
            <thingDefs>
                <li>EmptyBottle</li>
                <li>Chemfuel</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Weapon_GrenadeMolotov>5</Weapon_GrenadeMolotov>
        </products>
        <recipeUsers>
            <li>CraftingSpot</li>
            <li>WeaponCraftingWorkTable</li>
        </recipeUsers>
        <researchPrerequisite>Bow_B2</researchPrerequisite>
    </RecipeDef>



